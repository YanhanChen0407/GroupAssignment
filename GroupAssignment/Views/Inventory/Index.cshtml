@model GroupAssignment.Models.UserModel
@{
    ViewData["Title"] = "Inventory Management";
}

<style>
    .inventory-container {
        margin: 0 auto; 
        width: 100%; 
        max-width: 600px; 
        text-align: center;
        padding: 20px; 
    }

        .inventory-container h1 {
            margin-bottom: 20px; 
        }

        .inventory-container p {
            margin-bottom: 10px; 
        }

        .inventory-container .role {
            font-size: 14px;
        }

        .inventory-container .btn {
            margin-top: 10px;
            margin-bottom: 10px; 
        }
</style>

<div class="inventory-container">
    <h1>@ViewData["Title"]</h1>

    @if (User.Identity.IsAuthenticated)
    {
        var username = User.Identity.Name;
        var userRole = User.IsInRole("Manager") ? "Manager" : "Employee";

        <p>Welcome, @username!</p>
        <p>Your role: @userRole</p>
        @if (userRole == "Manager")
        {
            <a href="/Account/Users" class="btn btn-primary">View All Users</a>
        }
        <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Product List</a>
        <a href="@Url.Action("Index", "Order")" class="btn btn-primary">View Orders</a>
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    }
    else
    {
        <p>User information not available.</p>
    }
</div>
