@model GroupAssignment.Models.UserModel
@{
    ViewData["Title"] = "Edit User";
}

<style>
    .edit-user-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .edit-user-form {
        text-align: center;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        width: 300px;
        margin: auto;
    }

        .edit-user-form div {
            margin-bottom: 10px;
        }

        .edit-user-form label {
            display: block;
        }

        .edit-user-form input,
        .edit-user-form select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-top: 4px;
        }

        .edit-user-form button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
</style>
